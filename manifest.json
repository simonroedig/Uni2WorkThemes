{
    "manifest_version": 3,
    "name": "Uni2WorkThemes",
    "description": "Change the look of Uni2Work with Themes",
    "version": "1.1",
    "icons": {
        "16": "circle-16.png",
        "48": "circle-48.png",
        "128": "circle-128.png"
    },  
    "action": {
        "default_icon": {
            "16": "circle-16.png",
            "48": "circle-48.png",
            "128": "circle-128.png"
        },
        "default_popup": "popup.html"
    },
    "permissions": ["activeTab"],  
    "content_scripts": [{
        "matches": ["*://*.uni2work.ifi.lmu.de/*"],
        "css": ["main.css"],
        "js": ["content.js"],
        "run_at": "document_end"
    }]
}